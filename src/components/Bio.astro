<style>
  .bio-container {
    background: white;
    border-radius: 12px;
    padding: 2em;
    margin: 2em 0;
    box-shadow: var(--box-shadow);
  }

  .bio-header {
    text-align: center;
    margin-bottom: 2em;
  }

  h1 {
    margin: 0;
    color: var(--accent);
    font-size: 2.5em;
  }

  h2 {
    margin: 0.5em 0;
    color: rgb(var(--gray));
    font-size: 1.5em;
  }

  h3 {
    color: rgb(var(--gray-dark));
    margin: 1.5em 0 0.5em 0;
  }

  .contact-info {
    margin-top: 1em;
    display: flex;
    flex-direction: column;
    gap: 0.5em;
  }

  .contact-info p {
    margin: 0;
    color: rgb(var(--gray));
  }

  .contact-info span {
    margin-right: 0.5em;
  }

  .bio-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .summary {
    font-size: 1.1em;
    line-height: 1.6;
    color: rgb(var(--gray-dark));
    margin-bottom: 1.5em;
  }

  .professional-summary p {
    line-height: 1.6;
    color: rgb(var(--gray-dark));
  }

  a {
    color: var(--accent);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }
</style>