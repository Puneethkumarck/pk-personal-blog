---
import { SKILLS } from '../consts';
---

<div class="skills-container">
  <h2>Technical Capabilities</h2>
  
  <div class="skills-grid">
    <div class="skill-category">
      <h3>Expert</h3>
      <ul>
        {SKILLS.expert.map(skill => <li>{skill}</li>)}
      </ul>
    </div>
    
    <div class="skill-category">
      <h3>Interim</h3>
      <ul>
        {SKILLS.interim.map(skill => <li>{skill}</li>)}
      </ul>
    </div>
    
    <div class="skill-category">
      <h3>Beginner</h3>
      <ul>
        {SKILLS.beginner.map(skill => <li>{skill}</li>)}
      </ul>
    </div>
  </div>
</div>

<style>
  .skills-container {
    background: white;
    border-radius: 12px;
    padding: 2em;
    margin: 2em 0;
    box-shadow: var(--box-shadow);
  }

  h2 {
    color: var(--accent);
    margin-bottom: 1.5em;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2em;
  }

  .skill-category h3 {
    color: rgb(var(--gray-dark));
    margin-bottom: 1em;
    padding-bottom: 0.5em;
    border-bottom: 2px solid rgb(var(--gray-light));
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li {
    padding: 0.5em 1em;
    margin: 0.5em 0;
    background: rgb(var(--gray-light));
    border-radius: 4px;
    font-size: 0.9em;
  }

  li:hover {
    background: var(--accent);
    color: white;
    transform: translateX(5px);
    transition: all 0.2s ease;
  }
</style>