---
import { TECHNICAL_EXPERTISE } from '../consts';
---

<div class="expertise-container">
  <h2>Technical Expertise</h2>
  <div class="expertise-grid">
    {Object.entries(TECHNICAL_EXPERTISE).map(([key, category]) => (
      <div class="expertise-category">
        <h3>{category.title}</h3>
        <ul>
          {category.skills.map(skill => (
            <li>{skill}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</div>

<style>
  .expertise-container {
    background: white;
    border-radius: 12px;
    padding: 2em;
    margin: 2em 0;
    box-shadow: var(--box-shadow);
  }

  h2 {
    color: var(--accent);
    margin-bottom: 1.5em;
  }

  .expertise-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2em;
  }

  .expertise-category {
    margin-bottom: 1.5em;
  }

  h3 {
    color: rgb(var(--gray-dark));
    font-size: 1.1em;
    margin-bottom: 1em;
    padding-bottom: 0.5em;
    border-bottom: 2px solid rgb(var(--gray-light));
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li {
    background: rgb(var(--gray-light));
    padding: 0.5em 1em;
    margin: 0.5em 0;
    border-radius: 4px;
    font-size: 0.9em;
    transition: all 0.2s ease;
  }

  li:hover {
    background: var(--accent);
    color: white;
    transform: translateX(5px);
  }
</style>